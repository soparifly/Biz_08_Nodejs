extends layout

block content
	script(src="/js/table.js") 
	style.
		section.main{
			display:flex;
			flex-wrap:wrap;

			justify-content:center;
			align-items:center;
		}
		div.table{
			width: 200px;
			height: 100px;
			border-radius: 40px;
			margin: 10px;

			text-align: center;
			line-height: 100px;

			background-color:navy;
			color:whitesmoke;
			font-size:2px;
			font-weight:bold;

			cursor:pointer;	
		}
		div.table:hover{
			box-shadow : 3px 3px 3px blue;
		}
	- for(let i = 0 ; i < 12 ; i++)
		div.table(data-table_id= i+1 ) !{i + 1} 번 테이블