<!DOCTYPE html>
<html>
  <head>
    <title>우리동네 김밥나라 매출관리</title>
    <link rel="stylesheet" href="/css/style.css" />
    <style>
      .table_order {
        border: 1px solid goldenrod;
        width: 150px;
        height: 150px;
        margin: 10px;
        text-align: center;
        display: inline-block;
        flex: 1;
        color: whitesmoke;
        font-size: 80px;
        font-weight: 800;
        line-height: 150px;
        background-color: goldenrod;
        border-radius: 20px;
      }
    </style>
  </head>
  <body>
    <h1>김밥나라</h1>
    <section>
      <form>
        <% ORDERS.forEach((vo,index)=>{ %>
          <div class="table_order" data-id="<%- vo.o_seq %>">
            <%- vo.o_seq %> <% }) %>
          </div>
        </section>
      </form>
    <script>
      document
        .querySelector("div.table_order")
        .addEventListener("click", (e) => {
          let div = e.target;
          let className = div.className;
          let o_seq = div.dataset.id;
          
           document.location.href = `/kimbab/select?o_seq=${o_seq}`;
        });
    </script>
  </body>
</html>
