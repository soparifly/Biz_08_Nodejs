extends layout 

block content 

  style.
    *{
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }
    section#section_main{
      position: relative;
    }
    .menu_order {
      border: 1px solid wheat;
      width: 300px;
      height: 120px;
      margin: 30px 0 auto;
      text-align: center;
      display: inline-block;
      flex: 1;
      color: whitesmoke;
      font-size: 40px;
      font-weight: 500;
      background-color: black;
      border-radius: 50px;
    }
    div.modal{
      position: absolute;
      top: 0;
      right: 0;
      display: flex;
      z-index: 1000;
      width: 100%;
      height: 100%;
      border:1px solid purple;
      margin: 30px auto;
      border-radius: 10px;
      background-color: palevioletred;
      color: wheat;
    }

      section#main_section
        form
          div.menu_order
            span data= each vo,index in MENU.tbl_product(data-id= vo.p_code)
            vo.p_name }) 
        div.modal